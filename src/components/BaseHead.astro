---
import StructuredData from "./StructuredData.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: "website" | "blog-post";
  publishDate?: Date;
  modifiedDate?: Date;
  tags?: string[];
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description,
  image = "/default-og.png",
  type = "website",
  publishDate,
  modifiedDate,
  tags = [],
} = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="apple-touch-icon" href="/favicon.png" />
<link rel="mask-icon" href="/favicon.svg" color="#4ade80" />
<meta name="generator" content={Astro.generator} />

<link rel="manifest" href="/manifest.json" />
<meta name="theme-color" content="#09090b" />
<link type="text/plain" rel="author" href="/humans.txt" />
<link type="text/plain" rel="llms-txt" href="/llms.txt" />
<link rel="help" href="/llms.txt" />

<link rel="canonical" href={canonicalURL} />
<link rel="alternate" type="application/atom+xml" title="0xGhost Blog" href="/announcements.atom" />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- JSON-LD Structured Data -->
<StructuredData
  type={type}
  title={title}
  description={description}
  url={canonicalURL.toString()}
  image={image}
  publishDate={publishDate}
  modifiedDate={modifiedDate}
  tags={tags}
/>
