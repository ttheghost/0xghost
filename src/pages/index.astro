---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import TerminalWindow from '../components/TerminalWindow.astro';

// Get posts and sort by date (newest first)
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="0xGhost // System Root">
  <div class="space-y-12">
    <section class="text-center py-12">
        <div class="inline-block px-3 py-1 mb-4 text-xs font-mono text-green-400 bg-green-400/10 rounded-full border border-green-400/20 animate-pulse">
            ‚óè System Online
        </div>
        <h1 class="text-5xl font-bold tracking-tight mb-4">
            0x<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Ghost</span>
        </h1>
        <p class="text-zinc-400 max-w-xl mx-auto text-lg">
            Low-level engineering, C++, and compiler design. <br>
            Exploring the machine, one byte at a time.
        </p>
    </section>

    <div class="grid gap-6 md:grid-cols-2">
      <TerminalWindow title="latest-log.md" class="md:col-span-2 hover:border-zinc-700 transition-colors group">
        <a href={`/blog/${posts[0].id}`} class="block">
            <span class="text-xs text-blue-400 mb-2 block">NEW ENTRY</span>
            <h2 class="text-2xl font-bold group-hover:text-blue-400 transition-colors">{posts[0].data.title}</h2>
            <p class="text-zinc-400 mt-2">{posts[0].data.description}</p>
        </a>
      </TerminalWindow>

      {posts.slice(1).map((post) => (
        <TerminalWindow title="archived-log">
             <a href={`/blog/${post.id}`} class="block group">
                <h3 class="text-xl font-bold group-hover:text-purple-400 transition-colors">{post.data.title}</h3>
                <p class="text-sm text-zinc-500 mt-2 line-clamp-2">{post.data.description}</p>
                <div class="mt-4 flex gap-2">
                    {post.data.tags.map(tag => (
                        <span class="text-[10px] uppercase tracking-wider bg-zinc-900 border border-zinc-800 px-2 py-1 rounded text-zinc-400">
                            {tag}
                        </span>
                    ))}
                </div>
            </a>
        </TerminalWindow>
      ))}
    </div>
  </dev>
</Layout>